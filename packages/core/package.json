{
  "name": "@solidusjs/core",
  "version": "1.0.1",
  "description": "The core library for SolidusJS - a plug-and-play Server-Side Rendering solution for SolidJS",
  "info": "An easy plug and play solution for incorporating Server-Side Rendering to any existing SolidJS application with minimal refactoring of your codebase. This package contains the core elements",
  "types": "./dist/types/index.d.ts",
  "homepage": "https://github.com/Perivel/solidus.js",
  "license": "BSD-2",
  "repository": {
    "type": "git",
    "url": "https://github.com/Perivel/solidus.js"
  },
  "contributors": [
    {
      "name": "Patrick Luy",
      "email": "pluy@perivel.com",
      "url": "https://patrickluy.com"
    }
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "keywords": [
    "solidhack",
    "best_ecosystem",
    "server side rendering",
    "ssr",
    "solid-js",
    "solid"
  ],
  "exports": {
    ".": {
      "browser": {
        "import": "./dist/browser.js",
        "require": "./dist/browser.js"
      },
      "node": {
        "import": "./dist/server.js",
        "require": "./dist/server.js"
      },
      "import": "./dist/server.js",
      "require": "./dist/server.js"
    }
  },
  "dependencies": {
    "@swindle/color": "^1.0.0",
    "@swindle/core": "^2.1.1",
    "rollup": "^2.70.1",
    "solid-app-router": "^0.3.2",
    "solid-js": "^1.3.13",
    "solid-meta": "^0.27.3"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "babel-preset-solid": "^1.3.13",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-polyfill-node": "^0.9.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2"
  },
  "scripts": {
    "build": "rollup -c",
    "inspect:circular": "npx madge --circular --extensions ts ./"
  }
}
